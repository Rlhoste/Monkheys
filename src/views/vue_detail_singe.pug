extends layout.pug

block header
    a.btn.btn-primary(href='/monkeys')(style='margin-left:10px; margin-top:10px') Revenir au menu
    

block content
    .col-md-6
       h #{monkey.id}
       h.display-4  Vue detail singe
       .card.bg-dark.text-white(style='width:400px; height:600px')
           img.card-img-top(src='img_avatar1.png', alt='Card image')
           .card-body(style='background-color:#222')
              h4.card-title  #{monkey.name}
              p.card-text Numero: #{monkey.num}
              p.card-text Couleur: #{monkey.color}
              - var url1 = '/modification_singe/' + monkey.id
              a.btn.btn-primary(href=url1, role='button') Modifier 
              - var url2 = '/monkeys/destroy/' + monkey.id
              a.btn.btn-danger(href=url2, role='button' style='margin-left:10px') Tuer
              
           

