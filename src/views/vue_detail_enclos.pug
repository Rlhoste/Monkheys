extends layout.pug

block header
    a.btn.btn-primary(href='/monkeys')(style='margin-left:10px; margin-top:10px') Revenir au menu
    

block content
    .col-md-6
       h.display-4  Vue detail enclos
       .card.bg-dark.text-white
           
           .card-body(style='background-color:#222')
              h4.card-title  #{enclos.nom}
              p.card-text Capacity: #{enclos.capacity}
              - var url3 = '/modification_enclos/' + enclos.id
              a.btn.btn-primary(href=url3, role='button') modifier 
              - var url4 = '/enclos/destroy/' + enclos.id
              a.btn.btn-danger(href=url4, role='button', style='margin-left:10px') Fermer

       table.table.table-dark
           thead
               tr
                   th Singes
                   th Nombre
                   th Couleur
                   th modifier singe
                   th Lier un singe a un autre enclos
                   th supprimer singe
           tbody
           each monkey in monkeys 
               tr
                   td 
                      - var url = '/monkeys/' + monkey.id
                      a(href=url) #{monkey.name}
                   td #{monkey.num}
                   td #{monkey.color}
                   td 
                      - var url1 = '/modification_singe/' + monkey.id
                      a.btn.btn-primary(href=url1, role='button') modifier 
                   td 
                      - var url6 = '/lier_singe/' + monkey.id
                      a.btn.btn-primary(href=url6, role='button') Lier ce singe
                   td
                      - var url2 = '/monkeys/destroy/' + monkey.id
                      a.btn.btn-danger(href=url2, role='button') X 
       a.btn.btn-success(href='/createMonkey/', role='button') Cree un singe
           

